<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/relativeLayout"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonRestart"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="@string/restartbutton"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:background="@color/gameColor"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:fontFamily="sans-serif-light"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageViewSettingsRestart"
            android:src="@drawable/settings"
            android:layout_below="@+id/textViewBestValue"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GAME OVER"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="1323523"
            android:id="@+id/textViewFinalScore"
            android:layout_above="@+id/buttonRestart"
            android:layout_below="@+id/textView2"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:fontFamily="sans-serif-light"
            android:textSize="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="BEST"
            android:id="@+id/textViewBest"
            android:layout_below="@+id/buttonRestart"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:fontFamily="sans-serif-light"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="12356"
            android:id="@+id/textViewBestValue"
            android:layout_below="@+id/textViewBest"
            android:layout_centerHorizontal="true"
            android:textSize="35dp"
            android:fontFamily="sans-serif-light"/>
    </RelativeLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="50dp">
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sound"
        android:id="@+id/checkBoxSound"
        android:layout_alignParentTop="true"
        android:layout_marginTop="106dp"
        android:checked="false"
        android:textSize="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:fontFamily="sans-serif-light" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vibration"
        android:id="@+id/checkBoxVibration"
        android:checked="false"
        android:textSize="30dp"
        android:layout_below="@+id/checkBoxSound"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Games Played :"
        android:id="@+id/textView3"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"
        android:gravity="left|center"
        android:layout_alignParentBottom="true"
 />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/textViewGamesPlayed"
        android:textSize="30sp"
        android:gravity="right"
        android:fontFamily="sans-serif-light"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best :"
        android:id="@+id/textView5"
        android:textSize="20sp"
        android:gravity="center"
        android:fontFamily="sans-serif-light"


        android:layout_alignBottom="@+id/textViewBestScoreSettings"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textViewBestScoreSettings" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/textViewBestScoreSettings"
        android:textSize="30dp"
        android:fontFamily="sans-serif-light"
        android:gravity="bottom|right"
        android:layout_above="@+id/textViewGamesPlayed"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/checkBoxSound"
        android:layout_alignStart="@+id/checkBoxSound"
        android:layout_alignRight="@+id/checkBoxSound"
        android:layout_alignEnd="@+id/checkBoxSound"
        android:gravity="center"
        android:textSize="40dp"
        android:fontFamily="sans-serif-light"
        android:textColor="#000000" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:background="#000000"
        android:layout_marginTop="5dp"></FrameLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageViewBack"
        android:layout_alignParentTop="true"
        android:src="@drawable/back"
        android:layout_margin="10dp" />

</RelativeLayout>
